
<div class="container-fluid" id = 'header'></div>
<div class="jumbotron">
  <h1>Mongo Scraper</h1>      
  <p>Outside Magazine Latest Article Scraper</p>
</div>
        <div class="row">
            <div class="col-md-12">

                {{#each article}}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <a href={{this.link}} class="card-link">
                            <i class="far fa-newspaper"></i> Read Outside Magazine Articles</a>
                        <br>
                        <br>
                        <p class="card-text">Article Summary: {{this.summary}}</p>

                        <br>
                        <button type="button" class="btn btn-success" id = "save" data-id={{this._id}}>Save Article</button>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>